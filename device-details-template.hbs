<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Details - {{Device_Name}}</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="grafana-panel">
        <div class="container">
            <header class="header">
                <h1>{{Device_Name}}</h1>
                <div class="device-status">
                    <span class="status-badge {{#if Compliance_Status}}compliant{{else}}non-compliant{{/if}}">{{Compliance_Status}}</span>
                    <span class="status-badge {{#if Enrollment_Status}}enrolled{{else}}not-enrolled{{/if}}">{{Enrollment_Status}}</span>
                </div>
            </header>

            <main class="main-content">
                <!-- Device & System Information -->
                <section class="section">
                    <h2>Device & System</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Group</label>
                            <span>{{Device_Group}}</span>
                        </div>
                        <div class="info-item">
                            <label>Location</label>
                            <span>{{Location_ID}}</span>
                        </div>
                        <div class="info-item">
                            <label>Serial</label>
                            <span>{{Device_Serial_Number}}</span>
                        </div>
                        <div class="info-item">
                            <label>Platform</label>
                            <span>{{Device_Platform}}</span>
                        </div>
                        <div class="info-item">
                            <label>Model</label>
                            <span>{{Device_Model}}</span>
                        </div>
                        <div class="info-item">
                            <label>OS Version</label>
                            <span>{{OS_Version}}</span>
                        </div>
                        <div class="info-item">
                            <label>Country</label>
                            <span>{{Country}}</span>
                        </div>
                        <div class="info-item">
                            <label>Memory</label>
                            <span>{{Available_Physical_Memory_MB}}/{{Total_Physical_Memory_MB}} MB</span>
                        </div>
                        <div class="info-item">
                            <label>Battery</label>
                            <span class="battery-level">{{Battery_Life_Percent}}%</span>
                        </div>
                        <div class="info-item">
                            <label>AC Power</label>
                            <span class="status-text {{#if Device_On_AC_Power}}powered{{else}}not-powered{{/if}}">{{Device_On_AC_Power}}</span>
                        </div>
                    </div>
                </section>

                <!-- Status & Network -->
                <section class="section">
                    <h2>Status & Network</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Enrollment Date</label>
                            <span>{{Enrollment_Date}}</span>
                        </div>
                        <div class="info-item">
                            <label>Enrollment Status</label>
                            <span class="status-text {{#if Enrollment_Status}}enrolled{{else}}not-enrolled{{/if}}">{{Enrollment_Status}}</span>
                        </div>
                        <div class="info-item">
                            <label>Compliance</label>
                            <span class="status-text {{#if Compliance_Status}}compliant{{else}}non-compliant{{/if}}">{{Compliance_Status}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Seen</label>
                            <span>{{Last_Seen}}</span>
                        </div>
                        <div class="info-item">
                            <label>Compromised</label>
                            <span class="status-text {{#unless Is_Compromised}}safe{{else}}compromised{{/unless}}">{{Is_Compromised}}</span>
                        </div>
                        <div class="info-item">
                            <label>Roaming</label>
                            <span>{{Device_Roaming}}</span>
                        </div>
                        <div class="info-item">
                            <label>MAC Address</label>
                            <span>{{MAC_Address}}</span>
                        </div>
                        <div class="info-item">
                            <label>IP Address</label>
                            <span>{{WiFi_IP_Address}}</span>
                        </div>
                        <div class="info-item">
                            <label>Connection</label>
                            <span>{{GPRS_Connection}}</span>
                        </div>
                        <div class="info-item">
                            <label>Asset Number</label>
                            <span>{{Asset_Number}}</span>
                        </div>
                    </div>
                </section>

                <!-- Application Information -->
                <section class="section">
                    <h2>Application: {{App_Name}}</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>App Status</label>
                            <span class="status-text {{#if App_Status}}installed{{else}}not-installed{{/if}}">{{App_Status}}</span>
                        </div>
                        <div class="info-item">
                            <label>Assignment</label>
                            <span class="status-text {{#if App_Assignment_Status}}assigned{{else}}not-assigned{{/if}}">{{App_Assignment_Status}}</span>
                        </div>
                        <div class="info-item">
                            <label>Installation</label>
                            <span class="status-text {{#if Installation_Status}}managed{{else}}unmanaged{{/if}}">{{Installation_Status}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Action</label>
                            <span>{{Last_Action_Taken}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Action Time</label>
                            <span>{{Last_Action_Timestamp}}</span>
                        </div>
                        <div class="info-item">
                            <label>First Seen</label>
                            <span>{{App_First_Seen}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Seen</label>
                            <span>{{App_Last_Seen}}</span>
                        </div>
                        <div class="info-item">
                            <label>App ID</label>
                            <span>{{App_Identifier}}</span>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
</body>
</html>