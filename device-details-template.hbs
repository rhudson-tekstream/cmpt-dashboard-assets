<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Details - {{deviceName}}</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="grafana-panel">
        <div class="container">
            <header class="header">
                <h1>{{deviceName}}</h1>
                <div class="device-status">
                    <span class="status-badge {{#if complianceStatus}}compliant{{else}}non-compliant{{/if}}">{{complianceStatus}}</span>
                    <span class="status-badge {{#if enrollmentStatus}}enrolled{{else}}not-enrolled{{/if}}">{{enrollmentStatus}}</span>
                </div>
            </header>

            <main class="main-content">
                <!-- Device & System Information -->
                <section class="section">
                    <h2>Device & System</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Group</label>
                            <span>{{deviceGroup}}</span>
                        </div>
                        <div class="info-item">
                            <label>Location</label>
                            <span>{{locationId}}</span>
                        </div>
                        <div class="info-item">
                            <label>Serial</label>
                            <span>{{deviceSerialNumber}}</span>
                        </div>
                        <div class="info-item">
                            <label>Platform</label>
                            <span>{{devicePlatform}}</span>
                        </div>
                        <div class="info-item">
                            <label>Model</label>
                            <span>{{deviceModel}}</span>
                        </div>
                        <div class="info-item">
                            <label>OS Version</label>
                            <span>{{osVersion}}</span>
                        </div>
                        <div class="info-item">
                            <label>Country</label>
                            <span>{{country}}</span>
                        </div>
                        <div class="info-item">
                            <label>Memory</label>
                            <span>{{availablePhysicalMemory}}/{{totalPhysicalMemory}} MB</span>
                        </div>
                        <div class="info-item">
                            <label>Battery</label>
                            <span class="battery-level">{{batteryLifePercent}}%</span>
                        </div>
                        <div class="info-item">
                            <label>AC Power</label>
                            <span class="status-text {{#if deviceOnAcPower}}powered{{else}}not-powered{{/if}}">{{deviceOnAcPower}}</span>
                        </div>
                    </div>
                </section>

                <!-- Status & Network -->
                <section class="section">
                    <h2>Status & Network</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Enrollment Date</label>
                            <span>{{enrollmentDate}}</span>
                        </div>
                        <div class="info-item">
                            <label>Enrollment Status</label>
                            <span class="status-text {{#if enrollmentStatus}}enrolled{{else}}not-enrolled{{/if}}">{{enrollmentStatus}}</span>
                        </div>
                        <div class="info-item">
                            <label>Compliance</label>
                            <span class="status-text {{#if complianceStatus}}compliant{{else}}non-compliant{{/if}}">{{complianceStatus}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Seen</label>
                            <span>{{lastSeen}}</span>
                        </div>
                        <div class="info-item">
                            <label>Compromised</label>
                            <span class="status-text {{#unless isCompromised}}safe{{else}}compromised{{/unless}}">{{isCompromised}}</span>
                        </div>
                        <div class="info-item">
                            <label>Roaming</label>
                            <span>{{deviceRoaming}}</span>
                        </div>
                        <div class="info-item">
                            <label>MAC Address</label>
                            <span>{{macAddress}}</span>
                        </div>
                        <div class="info-item">
                            <label>IP Address</label>
                            <span>{{wifiIpAddress}}</span>
                        </div>
                        <div class="info-item">
                            <label>Connection</label>
                            <span>{{gprsConnection}}</span>
                        </div>
                        <div class="info-item">
                            <label>Asset Number</label>
                            <span>{{assetNumber}}</span>
                        </div>
                    </div>
                </section>

                <!-- Application Information -->
                <section class="section">
                    <h2>Application: {{appName}}</h2>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>App Status</label>
                            <span class="status-text {{#if appStatus}}installed{{else}}not-installed{{/if}}">{{appStatus}}</span>
                        </div>
                        <div class="info-item">
                            <label>Assignment</label>
                            <span class="status-text {{#if appAssignmentStatus}}assigned{{else}}not-assigned{{/if}}">{{appAssignmentStatus}}</span>
                        </div>
                        <div class="info-item">
                            <label>Installation</label>
                            <span class="status-text {{#if installationStatus}}managed{{else}}unmanaged{{/if}}">{{installationStatus}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Action</label>
                            <span>{{lastActionTaken}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Action Time</label>
                            <span>{{lastActionTimestamp}}</span>
                        </div>
                        <div class="info-item">
                            <label>First Seen</label>
                            <span>{{appFirstSeen}}</span>
                        </div>
                        <div class="info-item">
                            <label>Last Seen</label>
                            <span>{{appLastSeen}}</span>
                        </div>
                        <div class="info-item">
                            <label>App ID</label>
                            <span>{{appIdentifier}}</span>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
</body>
</html>
